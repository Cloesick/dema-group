{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "buildErrorWebhook": "https://dema-group-portal.vercel.app/api/webhooks/vercel-logs",
  "crons": [{
    "path": "/api/health",
    "schedule": "*/30 * * * *"
  }]
}
