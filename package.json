{
  "name": "dema-group",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "docs:update": "tsx scripts/update-docs-readme.ts",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:portal": "turbo dev --filter=portal",
    "dev:dema": "turbo dev --filter=dema",
    "dev:fluxer": "turbo dev --filter=fluxer",
    "build:portal": "turbo build --filter=portal",
    "build:dema": "turbo build --filter=dema",
    "cleanup": "node scripts/cleanup.js",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "minimatch": "^9.0.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "autoprefixer": "10.4.16",
    "cross-env": "^10.1.0",
    "next": "^16.1.1",
    "postcss": "8.4.31",
    "start-server-and-test": "^2.1.3",
    "tailwindcss": "3.3.0",
    "tsup": "^8.0.0"
  }
}
